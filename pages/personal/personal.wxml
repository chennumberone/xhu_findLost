<scroll-view scroll-y class="scrollPage">
  <view class="UCenter-bg">
    <open-data type="userAvatarUrl" class="img"></open-data>
    <view class="text-xl margin-top-sm">
      <open-data type="userNickName"></open-data>
    </view>
    <image src="https://www.xhufindlost.com:80/group1/M00/00/00/rBAAEV1yZIaAMrJfAA7uSvQcaz4491.gif" mode="scaleToFill" class="gif-wave"></image>
  </view>

  <view class="padding flex text-center text-grey bg-white shadow-warp">

    <view class="flex flex-sub flex-direction solid-right" bindtap="navchange_personInfo">
      <view class="text-xxl text-orange">
        <text class="cuIcon-my"></text>
      </view>
      <view class="margin-top-sm">
        个人信息</view>
    </view>


    <view bindtap="navToMsg" class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-blue">{{msgNum}}</view>
      <view class="margin-top-sm">
        消 息</view>
    </view>


  </view>

  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">

    <view class="cu-item arrow">
      <navigator url="../personal_/history/history" class="content" hover-class="none">
        <text class="cuIcon-text text-pink"></text>
        <text class="text-grey">发布历史</text>
      </navigator>
    </view>

    <!-- <view class="cu-item arrow">
      <navigator class="content" url="" hover-class="none">
        <text class="cuIcon-settings text-red"></text>
        <text class="text-grey">更换配色</text>
      </navigator>
    </view> -->

    <view class="cu-item arrow">
      <navigator class="content" url="../personal_/suggest/suggest" hover-class="none">
        <text class="cuIcon-formfill text-green"></text>
        <text class="text-grey">意见反馈</text>
      </navigator>
    </view>

    <view class="cu-item arrow">
      <navigator url="../personal_/friend/friend" hover-class="none" class="content">
        <text class="cuIcon-emoji text-red"></text>
        <text class="text-grey">用户群友</text>
      </navigator>
    </view>

  
    <view class="cu-item arrow">
      <button class="cu-btn content" open-type="share">
        <text class="cuIcon-info text-cyan"></text>
        <text class="text-grey">分享小程序</text>
      </button>
    </view>

    <view class="cu-item arrow">
      <navigator url="../personal_/log/log" class="content" hover-class="none">
        <text class="cuIcon-discover text-blue"></text>
        <text class="text-grey">更新日志</text>
      </navigator>
    </view>


  </view>
</scroll-view>